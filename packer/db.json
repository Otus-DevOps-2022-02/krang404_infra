{
    "builders": [
        {
            "type": "yandex",
            "service_account_key_file": "key.json",
            "folder_id": "{{user `folder_id`}}",

            "source_image_family": "ubuntu-1604-lts",
            "image_name": "reddit-db-{{timestamp}}",
